<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ProfileActivity"
    android:orientation="vertical"
    android:background="@drawable/blackwithorangeborder"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Profile Details"
                android:textColor="@color/borderColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="Full name:"
                android:textColor="@color/borderColor" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/textfieldorangewithwhite"
                android:hint="Full name"
                android:padding="12dp"
                android:textColor="@color/blackText" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="Email:"
                android:textColor="@color/borderColor" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/textfieldorangewithwhite"
                android:hint="Email"

                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="@color/blackText" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="If you don't want to change password, \nleave both the fields empty."
                android:textColor="@color/whiteColor" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="Current Password:"
                android:textColor="@color/borderColor" />

            <EditText
                android:id="@+id/cpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/textfieldorangewithwhite"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:padding="12dp"

                android:textColor="@color/blackText" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="New Password:"
                android:textColor="@color/borderColor" />

            <EditText
                android:id="@+id/npass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/textfieldorangewithwhite"
                android:hint="New Password"
                android:inputType="textPassword"
                android:padding="12dp"

                android:textColor="@color/blackText" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Service Settings"
                android:textColor="@color/borderColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/time_diff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/textfieldorangewithwhite"
                android:hint="Service time (e.g 40) "
                android:padding="12dp"

                android:textColor="@color/blackText" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:text="Opening and closing time"
                android:textColor="@color/borderColor" />

            <Button
                android:id="@+id/openingHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/textfieldorangewithwhite"
                android:hint="Opening Time"

                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="@color/blackText" />

            <Button
                android:id="@+id/closingHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/textfieldorangewithwhite"
                android:hint="Closing Time"

                android:inputType="time"
                android:padding="12dp"
                android:textColor="@color/blackText" />

            <Button
                android:id="@+id/saveChangesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/squareyellowithblacktextbtn"
                android:padding="12dp"
                android:text="Save Changes" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>