<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackwithorangeborder"
    tools:context=".order.OrderActivity">

    <ScrollView
        android:id="@+id/sV"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/orderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:layout_margin="12dp"
                android:text="Full name: Irfan Ullah" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:layout_margin="12dp"
                android:text="Full name: Irfan Ullah" />

            <TextView
                android:id="@+id/townCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:layout_margin="12dp"
                android:text="Town/City: Irfan Ullah" />

            <TextView
                android:id="@+id/postalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:layout_margin="12dp"
                android:text="Postal Code: Irfan Ullah" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:layout_margin="12dp"
                android:text="Postal Code: Irfan Ullah" />

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:layout_margin="12dp"
                android:text="Postal Code: Irfan Ullah" />

            <TextView
                android:id="@+id/productsQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:layout_margin="12dp"
                android:text="Postal Code: Irfan Ullah" />

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:layout_margin="12dp"
                android:text="Postal Code: Irfan Ullah" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/proRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>